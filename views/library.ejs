<%- include('./componets/header.ejs') %>
    <title>Libros
        <%- title %>
    </title>
    </head>

    <body>
        <%- include('./componets/navBar.ejs')%>
            <div class="container">
                <form method="GET" action="/admin">
                    <button class="btn btn-outline-dark">Iniciar Adminnistrador</button>
                </form><br>
                <h3>Libros </h3><br>
                <form method="POST" class="form-inline" action="">
                    <input class="form-control" required type="text" name="documento" placeholder="Documento" onkeypress="">
                    <button type="submit" class="btn btn-outline-success">Buscar</button>
                </form><br>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">isbn</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Autor</th>
                            <th scope="col">Editorial</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Costo</th>
                            <th scope="col">Unidades</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(const it of books){%>
                            <tr>
                                <th>
                                    <a>
                                        <%= it.isbn%>
                                    </a>
                                </th>
                                <th>
                                    <a>
                                        <%= it.title%>
                                    </a>
                                </th>
                                <th>
                                    <a>
                                        <%= it.author%>
                                    </a>
                                </th>
                                <th>
                                    <a>
                                        <%= it.editorial%>
                                    </a>
                                </th>
                                <th>
                                    <%= it.date%>
                                </th>
                                <th>
                                    <%= it.value%>
                                </th>
                                <th>
                                    <%= it.quantity > 0 ? it.quantity : "Agotado";%>
                                </th>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div><br>
    </body>

    <%- include('./componets/endHeader.ejs') %>